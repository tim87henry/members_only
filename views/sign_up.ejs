<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head') -%>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Sign up</title>
</head>
<body>
    <%- include('navbar') -%>
    <h4>Sign up form</h4>
    <% if (typeof errors !== 'undefined') { %>
        <ul style="list-style-type:none;">
            <% for (const error of errors) { %>
                <li style="color: red;"><%= error.msg %></li>
            <% } %>
        </ul>
    <% } %>
    <form action="" method="POST">
        <div class="form-group">
            <label for="first_name">First name</label>
            <input id="first_name" class="form-control col-3" name="first_name"  type="text">
        </div>
        <div class="form-group">
            <label for="last_name">Last name</label>
            <input id="last_name" class="form-control col-3" name="last_name"  type="text">
        </div>
        <div class="form-group">
                <label for="country">Country</label>
                <input id="country" class="form-control col-3" name="country" type="text">
            </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input id="username" class="form-control col-3" name="username"  type="text">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input id="password" class="form-control col-3" name="password" type="password">
        </div>
        <div class="form-group">
            <label for="confirm_password">Confirm Password</label>
            <input id="confirm_password" class="form-control col-3" name="confirm_password"" type="password">
        </div>
        <button class="btn btn-primary" type="submit">Sign up</button>
        <a href="/"><button class="btn btn-danger" type="button">Cancel</button></a>
    </form>
</body>
</html>